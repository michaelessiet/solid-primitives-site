---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";

type Props = CollectionEntry<"posts">["data"];

const {
  title,
  description,
  pubDate,
  updatedDate,
  heroImage,
  sandboxUrl,
  githubUrl,
} = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body>
    <Header />
    <main class="m-auto max-w-5xl p-8">
      <arkticle>
        {
          updatedDate && (
            <div class="last-updated-on">
              Last updated on <FormattedDate date={updatedDate} />
            </div>
          )
        }
        <slot />

				<h2>Demo</h2>
				{sandboxUrl && <iframe src={sandboxUrl} height="500px" width="100%"/>}

        <hr class="my-8"/>

        <div class="flex justify-around max-w-sm m-auto">
          <FormattedDate date={new Date(pubDate)} />
          <a href={githubUrl} class="text-cyan-800" target="_blank"
            >Open Github repo</a
          >
        </div>
      </arkticle>
    </main>
    <Footer />
  </body>
</html>
